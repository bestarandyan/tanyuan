<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_friend_list_bk"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp">

    <com.view.scalpel.widget.roundedimageview.RoundedImageView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ballFriendsImg"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:scaleType="center"
        app:riv_border_color="@color/app_action_bar_bg"
        app:riv_border_width="0dip"
        app:riv_corner_radius="5dip"
        app:riv_oval="false" />

    <LinearLayout
        android:id="@+id/ballFriendsInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ballFriendsImg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/ballFriendsNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#333"
                android:layout_toLeftOf="@+id/ballFriendsDistanceTv"
                android:textSize="16dp"
                android:singleLine="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ballFriendsDistanceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:textColor="#9E9E9E"
                android:textSize="10sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/ballFriendsImg"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/genderLayout"
                android:layout_width="36dp"
                android:layout_height="16dp"
                android:background="@drawable/shape_gender1_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/genderView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_002" />

                <TextView
                    android:id="@+id/ballFriendsAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/ballFriendsType"
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="球星"
                android:textColor="#fff"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/xingzuoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#666666"
                android:text="天秤座"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/iconBilliardsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iconTennisView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/icBadmintonView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iconTableTennisView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/ballFriendsSignTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
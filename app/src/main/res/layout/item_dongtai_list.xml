<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dongtai_bg"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp">

    <com.view.scalpel.widget.roundedimageview.RoundedImageView
        android:id="@+id/ballFriendsImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        app:riv_border_color="@color/app_action_bar_bg"
        app:riv_border_width="0dip"
        app:riv_corner_radius="5dip"
        app:riv_oval="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ballFriendsImg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ballFriendsNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bestar"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ballFriendsSignTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="我是一个有故事的叔叔，今晚来我家讲给你听听"
            android:textColor="#666666"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/circleImg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:minHeight="150dp"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/msgImg"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_comment" />

                <TextView
                    android:id="@+id/msgCountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="#9e9e9e"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zanLayout"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/zanImg"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_likeduser" />

                <TextView
                    android:id="@+id/zanCountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="#9e9e9e"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/moneyLayout"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/moneyImg"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_paymoney" />

                <TextView
                    android:id="@+id/moneyCountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="#9e9e9e"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
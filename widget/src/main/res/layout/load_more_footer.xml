<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/load_more_footer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

    <LinearLayout
            android:id="@+id/loading_more_layout"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal" >

        <ProgressBar
                android:id="@+id/load_more_progressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/load_more_drawable_progress" />

        <TextView
                android:id="@+id/load_text"
                style="@style/text_14_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="center"
                android:text="加载更多中..." />
    </LinearLayout>

    <TextView
            android:id="@+id/load_complete"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            style="@style/text_14_999999"
            android:gravity="center"
            android:visibility="gone" />

</RelativeLayout>